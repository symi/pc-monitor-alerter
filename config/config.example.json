{
    "scheduler": "*/2 * * * * *",
    "sources": [
        "open-hw-mon-wmi",
        "systeminformation",
        "os",
        "avira-wmi",
        "diskusage",
        "win-event"
    ],
    "reporters": [{
        "name": "console-basic",
        "rule": "temperature of any sensor > 0"
    }, {
        "name": "api"
    }],
    "hwWatchers": [
        {
            "item": "cpu",
            "measures": ["temporature", "utilisation", "speed"],
            "aggregates": ["min", "max", "avg", "delta"],
            "scheduler": "* * 12 * * *",
            "reporters": [{
                "name": "console-basic",
                "rule": "utilisation of all sensors = 50"
            }, {
                "name": "console"
            }]
        },
        {
            "item": "gpu",
            "measures": ["temporature", "utilisation", "speed"],
            "aggregates": ["min", "max", "avg", "delta"],
            "scheduler": "*/5 * * * * *"
        },
        {
            "item": "gpu",
            "measures": "temporature",
            "aggregates": "avg",
            "instances": [1, 2],
            "sources": ["sys-info", "open-hw-mon-wmi"]
        },
        {
            "item": "gpu-memory",
            "measures": "all",
            "aggregates": "all",
            "instances": 1,
            "scheduler": ""
        },
        {
            "item": "ram",
            "measures": ["temporature", "utilisation", "speed"],
            "aggregates": ["min", "max", "avg", "delta"]
        },
        {
            "item": "disk",
            "measures": ["temporature", "utilisation", "speed"],
            "aggregates": ["min", "max", "avg", "delta"],
            "instances": "C",
            "sources": "diskusage"
        }
    ],
    "swWatchers": [
        {
            "item": "sys-log",
            "measures": ["Critical", "Error"],
            "aggregates": ["count", "delta", "detail"]
        },
        {
            "item": "sys-up-time"
        },
        {
            "item": "antivirus-avira",
            "measures": ["updates", "scans"],
            "aggregates": ["count", "delta", "detail", "last"]
        },
        {
            "item": "sys-info"
        }
    ]
}
